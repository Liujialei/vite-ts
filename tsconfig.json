{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
  },
  "include": [
		"src/**/*.ts", 
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*",
		// "./auto-imports.d.ts",
		// "./components.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"dist",
		"**/*.js"
	],
  "references": [{ "path": "./tsconfig.node.json" }]
}
